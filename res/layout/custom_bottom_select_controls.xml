<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_bottom_select_controls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_buttons_height"
        android:background = "@drawable/custom_bottom_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
                android:id="@+id/custom_bottom_cancel"
                android:background="@drawable/ripple_bg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/black"
                android:text="@string/cancel"
                android:visibility="gone"
                />

        <Button
                android:id="@+id/custom_bottom_confirm"
                android:background="@drawable/ripple_bg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/black"
                android:text="@string/confirm"
                android:visibility="gone"
                />

</LinearLayout>
